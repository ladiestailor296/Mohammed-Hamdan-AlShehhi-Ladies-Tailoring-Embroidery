(function(){
  const chatBtn = document.createElement('button');
  chatBtn.id = 'ai-chat-btn';
  chatBtn.innerText = 'Chat with Assistant';
  chatBtn.style.position='fixed'; chatBtn.style.bottom='90px'; chatBtn.style.right='20px';
  document.body.appendChild(chatBtn);

  chatBtn.addEventListener('click', () => {
    const w = window.open('/ai-chat.html','_blank','width=420,height=680');
    if(!w) alert('Please allow popups for chat.');
  });
})();
