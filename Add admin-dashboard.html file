<body>

<h2>Admin Dashboard / لوحة تحكم المسؤول</h2>
<p>Manage Products, Orders & Discounts / إدارة المنتجات والطلبات والخصومات</p>

<div id="admin-actions">
  <button onclick="addProduct()">Add Product / إضافة منتج جديد</button>
  <button onclick="editProduct()">Edit Product / تعديل المنتج</button>
  <button onclick="removeProduct()">Remove Product / إزالة المنتج</button>
</div>

<script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-app.js"></script>
<script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-firestore.js"></script>
<script src="firebase-init.js"></script>

<script>
const db = firebase.firestore();

function addProduct() {
  const name_en = prompt("Enter Product Name (EN)");
  const name_ar = prompt("Enter Product Name (AR)");
  const price = prompt("Enter Price in AED");
  const description_en = prompt("Enter Description (EN)");
  const description_ar = prompt("Enter Description (AR)");
  const image = prompt("Enter Image Path (e.g. images/red-jalabiya.png)");

  if(name_en && image){
    db.collection("products").add({
      name_en, name_ar, price, description_en, description_ar, image
    }).then(()=> alert("Product Added Successfully"))
    .catch(err => alert("Error: " + err));
  } else {
    alert("Name & Image are required!");
  }
}

function editProduct() {
  alert("Editing requires product ID from Firestore console.");
}

function removeProduct() {
  const id = prompt("Enter Product ID to remove");
  if(id){
    db.collection("products").doc(id).delete()
      .then(()=> alert("Product Removed Successfully"))
      .catch(err => alert("Error: " + err));
  }
}
</script>

</body>
</html>
